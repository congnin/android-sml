<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <vn.kingbee.widget.edittext.FormatEditText
        android:id="@+id/view_keyboard_phone_number"
        android:layout_width="255dp"
        android:layout_height="60dp"
        android:layout_gravity="top|center_horizontal|center_vertical"
        android:digits="@string/DIGITS_NUMBER_SPACE"
        android:gravity="center|center_vertical|center_horizontal"
        android:hint="@string/LBL_CELLPHONE_HINT"
        android:inputType="number"
        android:textColorHint="@color/c_gray_step_text"
        app:enableMask="false"
        app:formatInput="### ### ####" />

    <vn.kingbee.widget.edittext.FormatEditText
        android:id="@+id/view_keyboard_id_number"
        android:layout_width="255dp"
        android:layout_height="60dp"
        android:layout_gravity="top|center_horizontal|center_vertical"
        android:digits="@string/DIGITS_NUMBER_SPACE"
        android:gravity="center|center_vertical|center_horizontal"
        android:hint="@string/LBL_ID_NUMBER_HINT"
        android:inputType="number"
        android:textColorHint="@color/c_gray_step_text"
        app:enableMask="true"
        app:formatInput="###### #### ## #" />

    <vn.kingbee.widget.edittext.FormatEditText
        android:id="@+id/view_keyboard_card_number"
        android:layout_width="255dp"
        android:layout_height="60dp"
        android:layout_gravity="top|center_horizontal|center_vertical"
        android:digits="@string/DIGITS_NUMBER_SPACE"
        android:gravity="center|center_vertical|center_horizontal"
        android:hint="@string/LBL_SSC_HINT"
        android:inputType="number"
        android:textColorHint="@color/c_gray_step_text"
        app:enableMask="false"
        app:formatInput="#### #### #### ####" />

    <vn.kingbee.widget.button.CircleButton
        android:id="@+id/btn_next"
        style="@style/CircleButton.Next"
        android:src="@mipmap/ic_next" />

    <vn.kingbee.widget.spinner.MaterialSpinner
        android:id="@+id/spPaymentNotificationMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_23"
        app:spinnerEmptyErrorMessage="Please select an option"
        app:spinnerFirstHint="Select an option"
        app:spinnerSecondHint="Select an option"
        app:spinnerSecondHintColor="@color/light_grey3"
        app:spinnerTextColor="@color/light_black" />
</LinearLayout>