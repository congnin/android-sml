<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/calendarControl"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/green_vertical_line"
        android:orientation="horizontal"
        android:paddingStart="30dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/calendar_dayOfWeekTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/calendar_dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/calendar_dayOfWeekTextView"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_date"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:layout_toLeftOf="@+id/iv_calendar"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_calendar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:src="@mipmap/cal_icon" />
    </RelativeLayout>

    <Button
        app:layout_constraintTop_toBottomOf="@+id/calendarControl"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startTOCDemoActivity"
        android:text="Term Of Condition"
        android:textColor="@android:color/black" />
</android.support.constraint.ConstraintLayout>