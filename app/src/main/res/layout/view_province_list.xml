<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ptbc_list_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="58dp">

        <ImageView
            android:id="@+id/icon_dismiss_dialog"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:scaleType="center"
            android:src="@mipmap/ic_close" />

        <TextView
            android:id="@+id/text_view_location_list_dialog_province_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:text="Pilih provinsi"
            android:textAppearance="@style/TextAppearance.HelveticaNeueMedium"
            android:textColor="@color/sky_blue"
            android:textSize="20dp" />
    </RelativeLayout>

    <View
        android:layout_width="400dp"
        android:layout_height="2dp"
        android:background="@color/sky_blue" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_location_list_dialog_province"
        style="@style/scrollbar_shape_style"
        android:layout_width="400dp"
        android:layout_height="520dp"
        android:paddingBottom="33dp"
        android:paddingLeft="30dp"
        android:paddingRight="27dp"
        android:paddingTop="22dp"
        android:scrollbarAlwaysDrawVerticalTrack="false"/>

</LinearLayout>