<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <attr format="reference" name="circularProgressbarStyle"/>
    <declare-styleable name="CircularProgressbar">
        <attr format="integer" name="startAngle"/>
        <attr format="float" name="progressbar_thickness" type="dimen"/>
        <attr format="enum" name="rotation">
            <enum name="clockwise" value="0"/>
            <enum name="anticlockwise" value="1"/>
        </attr>
        <attr format="float" name="currentProgress"/>
        <attr format="float" name="maxProgress"/>
        <attr format="color" name="innerProgressColor"/>
        <attr format="color" name="progressColor"/>
        <attr format="color" name="progressBackgroundColor"/>
    </declare-styleable>

    <declare-styleable name="FormatEditTextStyle">
        <attr format="string" name="formatInput"/>
        <attr format="boolean" name="enableMask"/>
        <attr format="reference" name="characterMask"/>
        <attr format="integer" name="delayMask"/>
    </declare-styleable>

    <declare-styleable name="SATextView">
        <attr name="typeFace" format="enum">
            <enum name="Aachen_Bold" value="0" />
            <enum name="helvetica_neue_medium_italic" value="1" />
            <enum name="HelveticaNeue" value="2" />
            <enum name="HelveticaNeue_Italic" value="3" />
            <enum name="HelveticaNeue_LightItalic" value="4" />
            <enum name="HelveticaNeue_UltraLight" value="5" />
            <enum name="HelveticaNeue_Light" value="6" />
            <enum name="Roboto_Regular" value="7" />
            <enum name="Roboto_Medium" value="8" />
            <enum name="Roboto_Light" value="9" />
            <enum name="Roboto_Bold" value="10" />
        </attr>
    </declare-styleable>
</resources>
