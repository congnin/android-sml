<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MaterialSpinner">
        <attr name="spinnerFirstHint" format="string" />
        <attr name="spinnerSecondHint" format="string" />
        <attr name="spinnerEmptyErrorMessage" format="string" />
        <attr name="spinnerFirstHintColor" format="color" />
        <attr name="spinnerSecondHintColor" format="color" />
        <attr name="spinnerErrorColor" format="color" />
        <attr name="spinnerTextColor" format="color" />
        <attr name="spinnerDrawableRight" format="reference" />
        <attr name="spinnerBackground" format="reference" />
    </declare-styleable>

    <attr name="circularProgressbarStyle" format="reference" />
    <declare-styleable name="CircularProgressbar">
        <attr name="startAngle" format="integer" />
        <attr name="progressbar_thickness" format="float" type="dimen" />
        <attr name="rotation" format="enum">
            <enum name="clockwise" value="0" />
            <enum name="anticlockwise" value="1" />
        </attr>
        <attr name="currentProgress" format="float" />
        <attr name="maxProgress" format="float" />
        <attr name="innerProgressColor" format="color" />
        <attr name="progressColor" format="color" />
        <attr name="progressBackgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="FormatEditTextStyle">
        <attr name="formatInput" format="string" />
        <attr name="enableMask" format="boolean" />
        <attr name="characterMask" format="reference" />
        <attr name="delayMask" format="integer" />
    </declare-styleable>

    <declare-styleable name="SATextView">
        <attr name="typeFace" format="enum">
            <enum name="Aachen_Bold" value="0" />
            <enum name="helvetica_neue_medium_italic" value="1" />
            <enum name="HelveticaNeue" value="2" />
            <enum name="HelveticaNeue_Italic" value="3" />
            <enum name="HelveticaNeue_LightItalic" value="4" />
            <enum name="HelveticaNeue_UltraLight" value="5" />
            <enum name="HelveticaNeue_Light" value="6" />
            <enum name="Roboto_Regular" value="7" />
            <enum name="Roboto_Medium" value="8" />
            <enum name="Roboto_Light" value="9" />
            <enum name="Roboto_Bold" value="10" />
        </attr>
    </declare-styleable>

    <style name="SquarePinEntry">
        <item name="pinNumbers">4</item>
        <item name="pinSize">@dimen/dimen_40</item>
        <item name="pinSpacing">@dimen/dimen_12</item>
        <item name="pinDefaultColor">@drawable/bg_square_pin_black_30</item>
        <item name="pinInActiveColor">@drawable/bg_square_pin_black</item>
        <item name="pinActiveColor">@drawable/bg_square_pin_yellow</item>
        <item name="pinBackgroundColor">@drawable/bg_circle_pin_black</item>
        <item name="pinErrorColor">@drawable/bg_square_pin_error</item>
        <item name="pinCircleSize">@dimen/dimen_15</item>
        <item name="pinTextSize">@dimen/text_size_18</item>
        <item name="pinTextColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <declare-styleable name="MaterialEditText">
        <attr name="editTextSecondHint" format="string" />
        <attr name="editTextFirstHint" format="string" />
        <attr name="emptyErrorMessage" format="string" />
        <attr name="singleLine" format="boolean" />
        <attr name="edtTextFirstHintColor" format="color" />
        <attr name="edtTextSecondHintColor" format="color" />
        <attr name="enable" format="boolean" />
        <attr name="enableEditText" format="boolean" />
        <attr name="editable" format="boolean" />
        <attr name="drawableRightEditText" format="reference" />
        <attr name="textColor" format="color" />
        <attr name="android:inputType" />
        <attr name="android:textSize" />
        <attr name="android:maxLength" />
        <attr name="android:digits" />
        <attr name="android:imeOptions" />
    </declare-styleable>

    <declare-styleable name="CircleButton">
        <attr name="cb_color" format="color" />
        <attr name="cb_disable_color" format="color" />
        <attr name="cb_pressedRingWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CircleProgress">
        <attr name="progress" format="float" />
        <attr name="max" format="integer" />
        <attr name="unfinished_color" format="color" />
        <attr name="finished_color" format="color" />
        <attr name="circle_starting_degree" format="integer" />
        <attr name="stoke_width" format="dimension" />
    </declare-styleable>
</resources>