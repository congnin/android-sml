<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--FOCUS STYLE-->
    <item android:state_enabled="false">
        <layer-list>
            <item android:gravity="top" android:left="-2.5dp" android:right="-2.5dp" android:top="-2.5dp">
                <shape>
                    <solid android:color="@color/transparent" />
                    <stroke android:width="2dp" android:color="@color/yellow" />
                    <padding android:bottom="4dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!--ERROR STYLE-->
    <item android:state_selected="true">
        <layer-list>
            <item android:gravity="top" android:left="-2.5dp" android:right="-2.5dp" android:top="-2.5dp">
                <shape>
                    <solid android:color="@color/transparent" />
                    <stroke android:width="2dp" android:color="@color/red" />
                    <padding android:bottom="4dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!--NORMAL STYLE-->
    <item>
        <layer-list>
            <item android:gravity="top" android:left="-2.5dp" android:right="-2.5dp" android:top="-2.5dp">
                <shape>
                    <solid android:color="@color/transparent" />
                    <stroke android:width="1dp" android:color="@color/light_grey" />
                    <padding android:bottom="4dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>