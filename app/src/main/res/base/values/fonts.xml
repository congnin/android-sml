<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.HelveticaNeue" parent="android:TextAppearance">
        <item name="fontPath">fonts/HelveticaNeue.ttf</item>
    </style>

    <style name="TextAppearance.HelveticaNeueLight" parent="android:TextAppearance">
        <item name="fontPath">fonts/HelveticaNeue_Light.ttf</item>
    </style>

    <style name="TextAppearance.HelveticaNeueBold" parent="android:TextAppearance">
        <item name="fontPath">fonts/HelveticaNeue-Bold.ttf</item>
    </style>

    <style name="TextAppearance.HelveticaNeueMedium" parent="android:TextAppearance">
        <item name="fontPath">fonts/HelveticaNeue_Medium.ttf</item>
    </style>

    <style name="TextAppearance.RobotoRegular" parent="android:TextAppearance">
        <item name="fontPath">fonts/Roboto_Regular.ttf</item>
    </style>

    <style name="TextAppearance.RobotoMedium" parent="android:TextAppearance">
        <item name="fontPath">fonts/Roboto_Medium.ttf</item>
    </style>

    <style name="TextAppearance.RobotoLight" parent="android:TextAppearance">
        <item name="fontPath">fonts/Roboto_Light.ttf</item>
    </style>

    <style name="Font.RobotoMedium" parent="android:TextAppearance">
        <item name="typeFace">Roboto_Medium</item>
    </style>

    <style name="Font.RobotoBold" parent="android:TextAppearance">
        <item name="typeFace">Roboto_Bold</item>
    </style>

    <style name="Font.RobotoRegular" parent="android:TextAppearance">
        <item name="typeFace">Roboto_Regular</item>
    </style>

    <style name="Font.RobotoLight" parent="android:TextAppearance">
        <item name="typeFace">Roboto_Light</item>
    </style>

    <style name="text_view_12sp_regular_single_line_style" parent="Font.RobotoRegular">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="text_view_12sp_medium_single_line_style" parent="Font.RobotoMedium">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:layout_height">@dimen/text_view_height_12sp_medium</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="text_view_12sp_regular_multiple_line_style" parent="Font.RobotoRegular">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">@dimen/text_view_12sp_extra_spacing</item>
        <item name="android:lineSpacingMultiplier">0.9</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_view_14sp_regular_single_line_style" parent="Font.RobotoRegular">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:layout_height">@dimen/text_view_height_14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="text_view_14sp_medium_single_line_style" parent="Font.RobotoMedium">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:layout_height">@dimen/text_view_height_14sp_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="text_view_14sp_regular_multiple_line_style" parent="Font.RobotoRegular">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">@dimen/text_view_14sp_extra_spacing</item>
        <item name="android:lineSpacingMultiplier">0.9</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_view_16sp_regular_multiple_line_style" parent="Font.RobotoRegular">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">@dimen/text_view_16sp_extra_spacing</item>
    </style>

    <style name="text_view_16sp_regular_single_line_style" parent="Font.RobotoRegular">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingTop">@dimen/dimen_1</item>
    </style>

    <style name="TextAppearance.Heading1" parent="TextAppearance.HelveticaNeue">
        <item name="android:textSize">@dimen/text_size_heading_1</item>
        <item name="android:lineSpacingMultiplier">@dimen/text_line_spacing_multiplier_1_2</item>
    </style>

    <style name="TextAppearance.Heading2" parent="TextAppearance.HelveticaNeue">
        <item name="android:textSize">@dimen/text_size_heading_2</item>
        <item name="android:lineSpacingMultiplier">@dimen/text_line_spacing_multiplier_1_2</item>
    </style>

    <style name="TextAppearance.Paragraph1" parent="TextAppearance.HelveticaNeue">
        <item name="android:textSize">@dimen/text_size_paragraph_1</item>
        <item name="android:lineSpacingMultiplier">@dimen/text_line_spacing_multiplier_1_2</item>
    </style>

    <style name="TextAppearance.Paragraph1.Bold" parent="TextAppearance.Paragraph1">
        <item name="fontPath">fonts/HelveticaNeue-Bold.ttf</item>
    </style>

    <style name="CBSATextAppearance.Paragraph2" parent="TextAppearance.HelveticaNeue">
        <item name="android:textSize">@dimen/cbsa_text_size_paragraph_2</item>
        <item name="android:lineSpacingMultiplier">@dimen/cbsa_text_line_spacing_multiplier_1_2</item>
    </style>
</resources>