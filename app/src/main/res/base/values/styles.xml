<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:label">@string/ab_list_title</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="android:windowFrame">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/c_transparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppThemeGrid" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryGrid</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGrid</item>
        <item name="colorAccent">@color/colorAccentGrid</item>
        <item name="android:label">@string/ab_grid_title</item>
    </style>

    <style name="Dialog_Infade_OutFade_Animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="InputFieldStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/light_grey3</item>
        <item name="colorControlNormal">@color/light_grey3</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="colorControlActivated">@color/yellow</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">12dp</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="TextInputLayoutErrorStyle" parent="TextAppearance.RobotoRegular">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12dp</item>
        <item name="colorControlActivated">@color/light_grey3</item>
    </style>

    <style name="CircleButton">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/btn_circle_capture_border</item>
        <item name="android:gravity">center</item>
        <item name="cb_color">@color/yellow</item>
        <item name="cb_disable_color">@color/circle_button_disable</item>
        <item name="cb_pressedRingWidth">5dp</item>
    </style>

    <style name="CircleButton.Next">
        <item name="android:src">@mipmap/ic_next</item>
    </style>

    <style name="StyleHelpScrollbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarSize">15dp</item>
        <item name="android:scrollbarThumbVertical">@color/c_scrollview_bar</item>
        <item name="android:scrollbarTrackVertical">@color/c_scrollview_bar_background</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="scrollbar_shape_style">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_vertical_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/scrollbar_vertical_track</item>
        <item name="android:scrollbarSize">5dp</item>
        <item name="android:scrollbarFadeDuration">2000</item>
        <item name="android:scrollbarDefaultDelayBeforeFade">1000</item>
        <item name="android:smoothScrollbar">false</item>
    </style>

    <style name="DatePicker" parent="@android:style/Theme.Holo.Light">
        <item name="android:datePickerStyle">@android:style/Widget.Material.Light.DatePicker</item>
    </style>

    <style name="AccountRightDialogAnim">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_bottom</item>
        <item name="android:windowExitAnimation">@anim/dialog_pop_bottom</item>
    </style>

    <style name="MenuContentDialogFragment">
        <item name="android:windowEnterAnimation">@anim/menu_dialog_fade_in</item>
        <item name="android:windowExitAnimation">@anim/menu_dialog_fade_out</item>
    </style>

    <style name="AccountCustomTabText">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@drawable/custom_tab_indicator_text</item>
    </style>

    <style name="Button.Primary" parent="Button.Without.Icon">
        <item name="android:background">@drawable/primary_button_style</item>
        <item name="android:textColor">@drawable/secondary_text_style</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="Button.Without.Icon" parent="Card.Button">
        <item name="android:textAppearance">@style/TextAppearance.HelveticaNeueBold</item>
        <item name="android:textSize">@dimen/text_size_paragraph_1</item>
        <item name="android:paddingLeft">@dimen/default_margin_xxlarge</item>
        <item name="android:paddingRight">@dimen/default_margin_xxlarge</item>
    </style>

    <style name="Card.Button" parent="android:Widget.Button">
        <item name="android:minWidth">@dimen/card_button_min_width</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/card_button_min_height</item>
    </style>

    <item name="text_line_spacing_multiplier_1_2" format="float" type="dimen">1.2</item>

    <style name="StyleHelpArrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/help_item_arrow_height</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginLeft">@dimen/help_item_arrow_margin_left</item>
        <item name="android:layout_marginRight">@dimen/help_item_arrow_margin_left</item>
        <item name="android:layout_marginTop">@dimen/default_padding_normal</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@mipmap/icon_arrow_close</item>
    </style>

    <style name="StyleHelpDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/container_box_border</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- buttons color -->
        <item name="colorAccent" tools:ignore="PrivateResource">@color/accent_material_light</item>
        <!-- title and message color -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- dialog background -->
        <item name="android:background">@color/white</item>
    </style>
</resources>
