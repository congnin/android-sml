<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ln_loading"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:clickable="true"
    android:background="@color/c_transparent"
    android:orientation="vertical">

    <vn.kingbee.widget.dialog.big.timeout.LoadingCircular
        android:id="@+id/lv_circular"
        android:layout_width="@dimen/default_loading_width"
        android:layout_height="@dimen/default_loading_height"
        android:onClick="startAnim" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_padding_small"
        android:text="Processing..."
        android:textColor="@color/cbsa_color_white"
        android:textSize="20sp" />
</LinearLayout>