<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="29dp"
    android:layout_marginTop="29dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/up_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginEnd="3dp"
        android:background="@color/cbsa_color_white"
        android:src="@mipmap/btn_scroll_up" />

    <ScrollView
        android:id="@+id/scroll_view"
        style="@style/scrollbar_shape_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/web_view_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:descendantFocusability="blocksDescendants"
            android:visibility="invisible"
            android:orientation="vertical">

            <WebView
                android:id="@+id/web_view_customer_statement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/term_and_condition_header"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:clickable="true">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:background="#979797" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="Terms and Conditions"
                    android:textColor="@color/black"
                    android:textSize="32sp" />

                <ImageView
                    android:id="@+id/collapse_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_expand" />

            </RelativeLayout>

            <WebView
                android:id="@+id/web_view_term_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#979797" />

            <Button
                android:id="@+id/btn_read_and_agree"
                android:layout_width="343dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/button_select_yellow"
                android:text="I have read and agree"
                android:textAppearance="@style/TextAppearance.HelveticaNeueBold"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/down_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="3dp"
        android:background="@color/cbsa_color_white"
        android:src="@mipmap/btn_scroll_down" />
</LinearLayout>