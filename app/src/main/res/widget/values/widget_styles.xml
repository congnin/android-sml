<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Mashead.Button.Transparent" parent="android:Widget.Button">
        <item name="android:layout_width">@dimen/mas_head_toolbar_button_width</item>
        <item name="android:layout_height">@dimen/mas_head_toolbar_button_height</item>
        <item name="android:background">@drawable/btn_transparent_style_standalone</item>
        <item name="android:textColor">@drawable/txt_button_style_standalone</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/CBSATextAppearance.Paragraph2</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Mashead.Button.Yellow" parent="android:Widget.Button">
        <item name="android:layout_width">@dimen/mas_head_toolbar_button_width</item>
        <item name="android:layout_height">@dimen/mas_head_toolbar_button_height</item>
        <item name="android:background">@drawable/btn_yellow_style_standalone</item>
        <item name="android:textColor">@color/cbsa_color_black</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/CBSATextAppearance.Paragraph2</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/default_padding_medium</item>
        <item name="android:paddingRight">@dimen/default_padding_medium</item>
    </style>
    <style name="Mashead.TextView.White" parent="@style/TextAppearance.HelveticaNeue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/cbsa_text_size_paragraph_2</item>
        <item name="android:textColor">@color/cbsa_selector_action_button_text_color_white</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="MasheadActionButton">
        <item name="android:layout_width">@dimen/mas_head_button_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="MasheadActionButton.Exit">
        <item name="android:layout_width">125dp</item>
        <item name="android:background">@drawable/masthead_border</item>
    </style>
    <color name="cbsa_color_yellow_down">#FFFFDF3A</color>
    <color name="cbsa_masthead_color_grey">#979797</color>
    <declare-styleable name="ActionButton">
        <!-- Icon left selector. -->
        <attr name="mashead_iconLeft" format="reference" />
        <!-- Selector background -->
        <attr name="mashead_background" format="reference" />
        <!-- Text to display. -->
        <attr name="mashead_text" format="string" />
        <!-- Text color selector. -->
        <attr name="mashead_textColor" format="reference" />
        <!-- Padding right. -->
        <attr name="mashead_paddingRight" format="dimension" />
        <!-- Padding left. -->
        <attr name="mashead_paddingLeft" format="dimension" />
        <!-- drawable padding. -->
        <attr name="mashead_drawablePadding" format="dimension" />
        <!-- mindWidth container -->
        <attr name="mashead_mindWidth" format="dimension" />
        <!-- Color tint -->
        <attr name="mashead_tint" format="reference" />
        <!-- Icon margin top-->
        <attr name="mashead_iconMarginTop" format="reference" />
    </declare-styleable>
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>
    <declare-styleable name="AvatarImageView">
        <attr name="text_size" format="dimension" />
    </declare-styleable>
